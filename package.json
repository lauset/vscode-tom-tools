{
  "name": "tomhub-tools",
  "displayName": "Tom Tools",
  "description": "Convenience tools",
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.71.0"
  },
  "keywords": [
    "vscode",
    "plugin",
    "vuetom",
    "tools",
    "tom"
  ],
  "icon": "resources/tt-icon.png",
  "publisher": "lauset",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "TomTools",
      "properties": {
        "tomtools.owner": {
          "type": "string",
          "default": "tom",
          "description": "你在 TomTools 这个世界中的名字"
        },
        "tomtools.welcome.enabled": {
          "type": "boolean",
          "default": false,
          "description": "启动时是否显示自定义的欢迎页面"
        },
        "tomtools.welcome.url": {
          "type": "string",
          "default": "https://cn.vuejs.org/",
          "description": "启动时自定义欢迎页面的URL网址"
        },
        "tomtools.urls.enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用文档列表的'本地配置文件'"
        },
        "tomtools.urls.path": {
          "type": "string",
          "default": "",
          "description": "文档列表配置文件的'本地路径'"
        },
        "tomtools.urls.file": {
          "type": "string",
          "default": "localurls.json",
          "description": "文档列表配置文件的'文件名称'"
        },
        "tomtools.search.enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用快搜配置的'本地配置文件'"
        },
        "tomtools.search.path": {
          "type": "string",
          "default": "",
          "description": "快搜配置文件的'本地路径'"
        },
        "tomtools.search.file": {
          "type": "string",
          "default": "localsearch.json",
          "description": "快搜配置文件的'文件名称'"
        },
        "tomtools.search.url": {
          "type": "string",
          "default": "https://www.baidu.com/s?wd=%s",
          "description": "快搜的'搜索网址'"
        },
        "tomtools.image.enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用 TomTools 侧边工具栏\"背景图\""
        },
        "tomtools.image.path": {
          "type": "string",
          "default": "https://cdn.nlark.com/yuque/0/2022/jpeg/27247901/1656486868594-assets/web-upload/d51b0fac-2aba-4406-aa1a-bd32a5a45382.jpeg",
          "description": "TomTools 侧边工具栏背景图片\"URL网址\""
        },
        "tomtools.image.opacity": {
          "type": "number",
          "maximum": 1,
          "minimum": 0,
          "default": 0.2,
          "description": "TomTools 侧边工具栏背景图片\"透明度\""
        }
      }
    },
    "commands": [
      {
        "command": "tt.so",
        "title": "快速搜索"
      },
      {
        "command": "tt.path",
        "title": "查看文件路径"
      },
      {
        "command": "tt.show",
        "title": "JS独有菜单"
      },
      {
        "command": "tt.welcome",
        "title": "显示 TomTools 的自定义欢迎页面"
      },
      {
        "command": "tt.doc",
        "title": "显示文档列表"
      },
      {
        "command": "tt.search",
        "title": "快搜配置页面"
      },
      {
        "command": "tt.menu",
        "title": "显示配置菜单"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus && editorHasSelection",
          "command": "tt.so",
          "group": "navigation@1"
        },
        {
          "when": "editorFocus",
          "command": "tt.path",
          "group": "navigation@1"
        },
        {
          "when": "editorFocus && resourceLangId == javascript",
          "command": "tt.show",
          "group": "z_commands"
        }
      ],
      "editor/title": [
        {
          "when": "editorFocus && resourceLangId == markdown",
          "command": "tt.path",
          "group": "navigation"
        }
      ],
      "editor/title/context": [],
      "explorer/context": [
        {
          "command": "tt.path",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tomtoolsExplorer",
          "title": "Tom工具栏",
          "icon": "resources/menus/tt-menu.svg"
        }
      ]
    },
    "views": {
      "tomtoolsExplorer": [
        {
          "id": "tomtools.urllist",
          "name": "文档列表"
        },
        {
          "id": "tomtools.weaview",
          "name": "天气监测",
          "type": "webview"
        },
        {
          "id": "tomtools.confview",
          "name": "控制面板",
          "type": "webview"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lauset/vscode-tom-tools"
  },
  "homepage": "https://github.com/lauset/vscode-tom-tools#tom-tools",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "css": "npx tailwindcss -i ./libs/css/input.css -o ./libs/css/output.css",
    "css:watch": "npx tailwindcss -i ./libs/css/input.css -o ./libs/css/output.css --watch",
    "lint": "tslint --project tsconfig.json -e src/*.d.ts -t verbose",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.14.184",
    "@types/mocha": "^9.1.1",
    "@types/needle": "^2.5.3",
    "@types/node": "~18.7.16",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.23.0",
    "eslint-define-config": "^1.7.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.3",
    "vsce": "^2.11.0"
  },
  "dependencies": {
    "needle": "^3.1.0"
  }
}
